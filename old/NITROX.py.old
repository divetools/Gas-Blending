#!/usr/bin/python

import Adafruit_ADS1x15, time, os

adc = Adafruit_ADS1x15.ADS1115()

FAC = (adc.read_adc(0, gain=16) + adc.read_adc(0, gain=16) + adc.read_adc(0, gain=16) + adc.read_adc(0, gain=16) + adc.read_adc(0, gain=16)) / 5 / 20.9 

while True:
   O2 = round(adc.read_adc(0, gain=16) / FAC,1)
   MOD = round(((1.4 / (O2 * .01)) - 1) * 33)
   os.system('clear')
   print " "
   print "   O2%     MOD"
   print " ", O2, "  ", MOD
   time.sleep(0.5)
